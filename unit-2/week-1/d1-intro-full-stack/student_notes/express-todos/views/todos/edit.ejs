<body>
    <form action="/todos/<%= todo.id %>?_method=PUT" method="POST" autocomplete="off">
        <input type="text" name="todo" value="<%= todo.todo %>">
        <label>
            <input type="checkbox" name="done" <%=todo.done ? 'checked' : '' %>>
            Completed?
        </label>
        <button type="submit">UPDATE TODO</button>
    </form>
</body>
